page {
  height: 100%;
  background-color: #eee;
}
.section {
  padding-bottom: 20rpx;
  background-color: #fff;
  border-top: 1px solid #ddd;
}
.picker-item {
  height: 100px;
  border-bottom: 1px solid #ddd;
  position: relative;
}
.picker-label {
  position: absolute;
  top: 0;
  left: 0;
  width: 60px;
  margin-left: 10px;
  font-size: 32rpx;
  height: 100px;
  line-height: 100px;
}
.picker-label:after {
  display: inline-block;
  content: '';
  width: 100%;
  height: 0;
  overflow: hidden;
}
.picker-content {
  position: absolute;
  top: 0;
  left: 90px;
}
.item {
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #ddd;
  position: relative;
}

.item-label {
  display: inline-block;
  width: 60px;
  height: 40px;
  margin-left: 10px;
  font-size: 32rpx;
  text-align: justify;
}
.item-label:after {
  display: inline-block;
  content: '';
  width: 100%;
  height: 0;
  overflow: hidden;
}

.item-content {
  position: absolute;
  top: 7px;
  left: 90px;
}

.placeholderStyle {
  font-size: 30rpx;
}
.btn {
  width: 260rpx;
  height: 72rpx;
  line-height: 72rpx;
  color: #666;
  border: 1px solid #bfd0e9;
  border-radius: 5px;
  text-align: center;
  margin: 20rpx auto;
  background-color: #d6e6c3;
}