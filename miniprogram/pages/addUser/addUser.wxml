<view class="section">
  <view class='picker-item'>
    <text class='picker-label'>所属部门</text>
    
      <picker-view class='picker-content' indicator-style="height: 40px;" style="width: calc(100% - 70px); height: 100px;" bindchange="bindChange">
        <picker-view-column>
          <view wx:for="{{departmentName}}" style="line-height: 40px">
            {{item.name}}
          </view>
        </picker-view-column>
      </picker-view>
    
  </view>
  <view class="item">
    <text class='item-label'>输入姓名</text>
    <input type='text' placeholder='请输入姓名' class='item-content' placeholder-class="placeholderStyle" bindblur="getName"></input>
  </view>
  <view class='btn' bindtap='adduserinfo'>提 交</view>
</view>