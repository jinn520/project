page {
  height: 100%;
  background-color: #eee;
}
.tips {
  height: 32px;
  line-height: 32px;
  text-align: center;
  vertical-align: middle;
  background-color: #b3d4db;
  color: #fff;
  position: relative;
}
.tips>icon {
  position: absolute;
  top: 10px;
}
.tips>text {
  font-size: 14px;
  margin-left: 20px;
}
.section {
  width: 100%;
  margin: 10px 0;
  background-color: #fff;
  border-top: 1px solid #ddd;
  padding-bottom: 20rpx;
}
.item {
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #ddd;
  position: relative;
}
.item-label {
  display: inline-block;
  width: 140rpx;
  height: 40px;
  margin-left: 10px;
  font-size: 32rpx;
  text-align: justify;
}
.item-label:after {
  display: inline-block;
  content: '';
  width: 100%;
  height: 0;
  overflow: hidden;
}
.item-content {
  position: absolute;
  top: 7px;
  left: 210rpx;
}
.item-remarks {
  height: 220rpx;
}
.remarks {
  border: 1px solid #efefef;
  height: 150rpx;
  width: 460rpx;
  padding: 20rpx; 
}
.item-radio {
  top: 0;
}
radio {
  transform:scale(.7);
}
.item-time {
  top: 0;
}
.placeholderStyle {
  font-size: 32rpx;
}
.item-confirm {
  margin: 20rpx 0;
}
.confirm {
  padding-left: 10rpx;
  font-size: 30rpx;
}
.item-btn {
  margin-top: 20rpx; 
  background-color: #fff;
  padding: 30rpx 0;
}
.btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #409eff;
  border-radius: 5px;
  color: #efefef;
}