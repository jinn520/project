page {
  height: 100%;
  background-color: #eee;
}
.tips {
  height: 32px;
  line-height: 32px;
  text-align: center;
  vertical-align: middle;
  background-color: #b3d4db;
  color: #fff;
  position: relative;
}
.tips>icon {
  height: 20px;
  position: absolute;
  top: 8px;
}
.tips>text {
  font-size: 14px;
  margin-left: 25px;
}
.section {
  width: 100%;
  margin: 10px 0;
  background-color: #fff;
  border-top: 1px solid #ddd;
  padding-bottom: 20rpx;
}
.item {
  height: 40px;
  line-height: 40px;
  border-bottom: 1px solid #ddd;
  position: relative;
}
.item-label {
  display: inline-block;
  width: 140rpx;
  height: 40px;
  margin-left: 10px;
  font-size: 32rpx;
  text-align: justify;
}
.item-label:after {
  display: inline-block;
  content: '';
  width: 100%;
  height: 0;
  overflow: hidden;
}
.item-content {
  position: absolute;
  top: 7px;
  left: 210rpx;
}
.item-radio {
  top: 0;
}
radio {
  transform:scale(.7);
}
.item-time {
  top: 0;
}
.placeholderStyle {
  font-size: 30rpx;
}
.btn {
  display: block;
  width: 300rpx;
  height: 80rpx;
  margin: 10rpx auto;
  line-height: 80rpx;
  border: 1px solid #405f80;
  border-radius: 5px;
  text-align: center;
}
.confirm {
  padding-left: 10rpx;
}